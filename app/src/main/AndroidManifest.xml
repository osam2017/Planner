<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.administrator.eventplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sandglass"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.administrator.eventplanner.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.administrator.eventplanner.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            </activity>
        <activity android:name="com.administrator.eventplanner.NewPlanActivity" android:label="새 일정"/>

        <activity android:name="com.administrator.eventplanner.Activity.PlanDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.administrator.eventplanner.Activity.SubPlanActivity"
            android:label="세부 일정" />
    </application>

</manifest>
